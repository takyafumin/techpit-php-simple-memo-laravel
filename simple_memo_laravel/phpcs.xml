<?xml version="1.0"?>
<ruleset name="PSR12">

    <arg name="extensions" value="php" />
    <arg value="ps" /><!-- オプション p:進捗表示  s:エラー表示時にルールを表示 -->

    <!-- ルール -->
    <rule ref="PSR12">
        <exclude name="PSR1.Files.SideEffects.FoundWithSymbols" />
    </rule>

    <rule ref="Generic.Files.LineLength">
        <properties>
            <property name="lineLimit" value="200"/>
        </properties>
    </rule>


    <!-- 対象のファイル、ディレクトリ -->
    <file>app</file>

</ruleset>
